    <style>
        /* width */
        ::-webkit-scrollbar {
            width: 7px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #255957;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #66fcf1;
            border-radius: 7px;
            border-width: 1.3px;
            border-color: #45a29e;
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #dfbe4c;
        }
    </style>

    <audio id="music" src="css/music/cl23.mp3" loop></audio>
    <script>
        const music = document.getElementById("music");
        let isMusicPlaying = false;

        function playMusicWithFade() {
            if (!isMusicPlaying) {
                music.volume = 0;
                music.play();
                fadeInMusic();
                isMusicPlaying = true;
            }
        }

        function fadeInMusic() {
            const fadeInterval = setInterval(function () {
                if (music.volume < 1) {
                    music.volume += 0.05;
                } else {
                    clearInterval(fadeInterval);
                }
            }, 200);
        }

        function stopMusicWithFade() {
            if (isMusicPlaying) {
                fadeOutMusic();
                isMusicPlaying = false;
            }
        }

        function fadeOutMusic() {
            const fadeInterval = setInterval(function () {
                if (music.volume > 0) {
                    music.volume -= 0.05;
                } else {
                    music.pause();
                    clearInterval(fadeInterval);
                }
            }, 200);
        }
    </script>

