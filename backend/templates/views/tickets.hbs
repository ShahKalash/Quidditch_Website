            <audio id="music" src="css/music/trimmed.mp3" loop></audio>

            <script>
                // Function to play music when hovering over a venue box
                function playMusic(venueBox) {
                    const music = document.getElementById("music");
                    music.play();
                }

                // Function to stop music when not hovering over a venue box
                function stopMusic(venueBox) {
                    const music = document.getElementById("music");
                    music.pause();
                    music.currentTime = 0; // Reset the music to the beginning
                }
            </script>

