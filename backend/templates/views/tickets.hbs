    <section class="ticket-booking" id="ticket-booking">
        <div class="container">
            <h1 class="heading" data-aos="fade-up" data-aos-easing="ease-in-out">GSPL Ticket Booking</h1>
            <form action="submit.php" method="post" class="ticket-form" data-aos="fade-up" data-aos-duration="500"
                data-aos-easing="ease-in-out">
                <div class="form-group">
                    <label for="fullname">Full Name:</label>
                    <input type="text" id="fullname" name="fullname" required>
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone" required>
                </div>

                <div class="form-group">
                    <label for="match">Select Match:</label>
                    <select id="match" name="match" required>
                        <option value="">Choose a Match</option>
                        <option value="Gryffindor Developers vs. Cyber Mahatmas">Gryffindor Developers vs. Cyber
                            Mahatmas</option>
                        <option value="Rampage Cyber Crusaders vs. Techstars Titans">Rampage Cyber Crusaders vs.
                            Techstars Titans</option>
                        <!-- Add more match options here -->
                    </select>
                </div>

                <div class="form-group">
                    <label for="ticket-type">Select Ticket Type:</label>
                    <select id="ticket-type" name="ticket-type" required>
                        <option value="">Choose a Ticket Type</option>
                        <option value="Regular">Regular</option>
                        <option value="VIP">VIP</option>
                        <!-- Add more ticket type options here -->
                    </select>
                </div>

                <div class="form-group">
                    <label for="region">Select Seat Region:</label>
                    <select id="region" name="region" required>
                        <option value="">Choose any of these region</option>
                        <option value="Golden Arc (center)">Golden Arc (center-front)</option>
                        <option value="Golden Arc (center)">Silver Arc (center-back)</option>
                        <option value="Golden Arc (center)">Golden Left</option>
                        <option value="Golden Arc (center)">Golden Right</option>
                        <option value="Golden Arc (center)">Silver Left</option>
                        <option value="Golden Arc (center)">Silver Right</option>


                    </select>
                </div>

                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" min="1" max="10" required>
                </div>

                <div class="form-group">
                    <button type="submit" class="submit-btn">Book Tickets</button>
                </div>
            </form>

            <div class="end-text">
                <h1>Double the Magic, Double the Fun:<br>See You at the Golden Snitch Pro League!</h1>
            </div>
        </div>

